#!/usr/bin/env bash

set -e

if [[ -n "${DEBUG}" ]]; then
    set -x
fi

wp_ver=$1

url="https://raw.githubusercontent.com/WordPress/WordPress/${wp_ver}/wp-config-sample.php"

array=(
    "./orig/wp-config-sample.php::${url}"
)

outdated=0

for index in "${array[@]}" ; do
    local="${index%%::*}"
    remote="${index##*::}"

    orig="/tmp/${RANDOM}"
    wget -qO "${orig}" "${remote}"

    echo "Checking ${local}"

    if diff "${local}" "${orig}"; then
        echo "OK"
    else
        echo "!!! OUTDATED"
        echo "${remote}"
        outdated=1
    fi
done

[[ "${outdated}" == 0 ]] || exit 1